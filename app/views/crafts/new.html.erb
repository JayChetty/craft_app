<h1> Add new craft </h1>
<div class="row">
<aside class="span4">
  <section>
    <%= form_for(@craft) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class = "field">
	      <%= f.label :name %>
	      <%= f.text_field :name %>	     
	    </div>
	    <%= f.submit "Post", class: "btn btn-large btn-primary" %>
		<% end %>
  </section>
</aside>
</div>  
